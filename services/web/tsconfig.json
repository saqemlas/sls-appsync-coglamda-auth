{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.Iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
